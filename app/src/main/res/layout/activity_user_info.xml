<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <View style="@style/frame_layout_line"
            android:background="@color/common_bg"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/collection_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/common_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_change_user_name"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp">

                        <!--android:background="@drawable/my_colloction_bg"-->
                        <View
                            android:id="@+id/icon_username"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/username" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <View
                        android:id="@+id/v_click_icon1"
                        style="@style/iconClickMe"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="24dp"
                    android:background="@color/color_d8d8d8" />

                <LinearLayout
                    android:id="@+id/ll_change_user_sex"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp">

                        <!--android:background="@drawable/my_box_bg"-->

                        <View
                            android:id="@+id/icon_sex"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/user_sex" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <View
                        android:id="@+id/v_click_icon_sex"
                        style="@style/iconClickMe" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="24dp"
                    android:background="@color/color_d8d8d8" />

                <LinearLayout
                    android:id="@+id/ll_change_birthday"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp">

                        <!--android:background="@drawable/my_nickname_bg"-->

                        <View
                            android:id="@+id/icon_birthday"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/user_birthday" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <View
                        android:id="@+id/v_click_icon_birthday"
                        style="@style/iconClickMe" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="24dp"
                    android:background="@color/color_d8d8d8" />

                <LinearLayout
                    android:id="@+id/ll_change_user_location"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/my_location_bg">

                        <View
                            android:id="@+id/icon_location"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/user_location" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <View
                        android:id="@+id/v_click_icon_location"
                        style="@style/iconClickMe" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="24dp"
                    android:background="@color/color_d8d8d8"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_change_nickname"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp">

                        <!--android:background="@drawable/my_setting_bg"-->

                        <View
                            android:id="@+id/icon_nickname"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/nickname" />

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <View
                        android:id="@+id/v_click_icon_nickname"
                        style="@style/iconClickMe" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="24dp"
                    android:background="@color/color_d8d8d8" />

                <LinearLayout
                    android:id="@+id/ll_phone"
                    style="@style/linearLayoutUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp">

                        <!--android:background="@drawable/my_nickname_bg"-->

                        <View
                            android:id="@+id/icon_phone"
                            style="@style/iconClickfont"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>


                    <TextView
                        style="@style/labelMineInfo"
                        android:layout_marginLeft="12dp"
                        android:text="@string/phone_label" />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_686868" />

                    <TextView
                        android:id="@+id/v_click_phone"
                        android:layout_width="33dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/btn_setting_bind"
                        android:gravity="center"
                        android:text="已绑"
                        android:textColor="@color/color_d2d2d2"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:background="@color/color_d8d8d8"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingBottom="15dp">

                    <Button
                        android:id="@+id/btn_logout"
                        style="@style/buttonStart"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/red_radius_button_background"
                        android:text="@string/logout"
                        android:textColor="@color/color_ffffff" />

                </RelativeLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/color_ffffff"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.1">

                <include layout="@layout/sub_user_info" />

            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/user_toolbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tv_back"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/title_personal_info"
                        android:textColor="@color/color_000000"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/img_click"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical" />

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>
