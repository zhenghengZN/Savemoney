<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_change"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:src="@drawable/pho_bg_popup" />

    <View
        style="@style/normal_line"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />


    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_sex_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/man"
            android:textColor="@color/color_sex_selector"
            android:drawableTop="@drawable/sex_man_selector"
            android:layout_gravity="center"
            android:gravity="center"
            android:checked="true"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:drawablePadding="12dp"/>

        <RadioButton
            android:id="@+id/rb_sex_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="@color/color_sex_woman_selector"
            android:drawableTop="@drawable/sex_woman_selector"
            android:drawablePadding="12dp"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/woman"/>


    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:id="@+id/vw_line"
            android:layout_width="0.5dp"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_change_no"
            android:layout_width="122dp"
            android:layout_height="44dp"
            android:layout_marginRight="14.5dp"
            android:layout_toLeftOf="@+id/vw_line"
            android:background="@drawable/bg_dialog_change_no"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_change_yes"
            android:layout_width="122dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_dialog_change_yes"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="@string/picker_yes"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</LinearLayout>